@using Dashboard.Entities
<div class="flex flex-row content-center gap-3 px-3 py-1 w-fit">
    <Avatar Size="10" AvatarUser="MessageSender"></Avatar>
    <div class="flex flex-col rounded-md bg-white p-3">
        <p class="font-bold">@MessageSender.DisplayName</p>
        <span bg-white rounded-lg>@Content</span>
    </div>
</div>

@code {
    [Parameter, EditorRequired] public string Content { get; set; } = null!;
    [Parameter, EditorRequired] public User MessageSender { get; set; }
}